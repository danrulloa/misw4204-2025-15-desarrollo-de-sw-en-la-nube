[run]
source = app
omit =
    # Endpoints no usados en Entrega 1
    app/api/v1/endpoints/groups.py
    app/api/v1/endpoints/permissions.py
    app/api/v1/endpoints/user.py
    # Servicios no usados en Entrega 1
    app/services/authorization/groups_service.py
    app/services/authorization/permissions_service.py
    # Modelos no usados en Entrega 1
    app/db/models/group.py
    app/db/models/permission.py
    app/db/models/group_permissions.py
    app/db/models/user_groups.py
    app/db/models/user_permissions.py
    # Middleware - complejidad de test con dependencias
    app/core/auth_middleware.py
    # Tests
    */tests/*
    */test_*

[report]
precision = 2
show_missing = True
skip_covered = False

[html]
directory = htmlcov
